{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "quotes": ["error", "double"],
    "indent": ["error", 4],
    "max-len": ["warn", 120],
    "semi": ["warn"],
    "@typescript-eslint/no-unused-vars": "warn"
  }
}
